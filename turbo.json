{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": [
    "**/.env.*local"
  ],
  "globalEnv": [
    "SANITY_API_TOKEN",
    "SANITY_PROJECT_ID",
    "RESEND_API_KEY",
    "MAILERLITE_API_KEY",
    "EMBEDDINGS_INDEX_BEARER_TOKEN",
    "GOOGLE_SERVICE_ACCOUNT_EMAIL",
    "GOOGLE_PRIVATE_KEY",
    "GOOGLE_SHEET_ID",
    "ISR_BYPASS_TOKEN",
    "REVALIDATION_SECRET"
  ],
  "tasks": {
    "build": {
      "dependsOn": [
        "^build"
      ],
      "outputs": [
        "dist/**",
        ".vercel/**"
      ],
      "cache": false
    },
    "lint": {
      "dependsOn": [
        "^lint"
      ]
    },
    "dev": {
      "cache": false,
      "persistent": true
    }
  }
}