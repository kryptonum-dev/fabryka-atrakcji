{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env.*local"],
  "globalEnv": [
    "SANITY_API_TOKEN",
    "SANITY_PROJECT_ID",
    "RESEND_API_KEY",
    "MAILERLITE_API_KEY",
    "EMBEDDINGS_INDEX_BEARER_TOKEN"
  ],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**", ".vercel/**"],
      "cache": false
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    }
  }
}
