              }

              &::after {
                content: '';
                position: absolute;
                inset: 0;
                z-index: -1;
                border-radius: 999px;
                background-color: var(--neutral-200, #f5f1ec);
              }
            }

            &:hover {
              .circle {
                transform: scale(1);
              }
            }

            &:focus:not(:focus-visible) {
              color: var(--neutral-200, #f5f1ec);
              &::before {
                transform: scale(1);
              }

              .circle {
                transform: scale(1);
              }
            }

            &:focus-visible {
              border-radius: 999px;
              outline-offset: 0.1875rem;
            }
          }
        }

        svg {
          position: absolute;
          top: 50%;
          left: -0.15625rem;
          transform: translateY(-50%);
          z-index: 5;
