      }

      div {
        display: flex;
        flex-wrap: wrap;
        align-items: center;
        column-gap: 1.5rem;
      }

      .copyright {
        display: inline-flex;
        align-items: center;
        min-height: 2.75rem;

        span {
          margin-right: 0.75rem;
        }
      }

      .annotation-link {
        position: relative;
        isolation: isolate;
        min-height: 2.75rem;
        display: inline-flex;
        align-items: center;
        border-radius: 0.25rem;
        overflow: hidden;

        &:before {
          content: '';
          position: absolute;
          bottom: 0.375rem;
          left: 0;
          z-index: -1;
          width: 100%;
          height: 0.078125rem;
          border-radius: 0.25rem;
          background-color: var(--neutral-400, #ede6de);
          transform: scaleX(0);
          transform-origin: left;
          transition: transform 450ms var(--easing);
        }

        &::after {
          content: '';
          position: absolute;
          top: 50%;
          left: 50%;
          z-index: -2;
          width: 100%;
          aspect-ratio: 1 / 1;
          background-color: var(--primary-400, #45051c);
          transform: translate(-50%, -50%) scale(0);
          border-radius: 50%;
          transition: transform 450ms var(--easing);
        }

        &:hover {
          &::before {
            transform: scaleX(1);
          }
        }

        &:focus:not(:focus-visible) {
          &::after {
            transform: translate(-50%, -50%) scale(1.2);
          }
        }

        &:focus-visible {
          outline-color: var(--neutral-400, #ede6de);
        }
      }
    }

    @media (max-width: 67.4375rem) {
      grid-template-columns: 1fr auto;
      column-gap: 2rem;

      .heading {
        grid-column: 1 / 2;
