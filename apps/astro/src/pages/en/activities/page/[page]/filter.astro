---
export const prerender = false

import ActivitiesListing, { fetchData, staticPaths } from '@/src/templates/activities/CategoriesPage.astro'

const page = parseInt(Astro.params.page || '1')
const data = await fetchData('en', page, Astro.url.origin, Astro.url.searchParams)

// Calculate canonical URL (remove /filter from current path)
const canonicalUrl = Astro.url.origin + `/en/activities/page/${page}/`

if (!data) return Astro.rewrite('/en/404')

export const getStaticPaths = () => staticPaths('en')
---

<ActivitiesListing {...data} currentPage={page} canonicalUrl={canonicalUrl} />

