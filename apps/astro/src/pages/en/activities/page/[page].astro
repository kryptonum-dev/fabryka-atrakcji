---
import ActivitiesListing, { fetchData, staticPaths } from '@/src/templates/activities/CategoriesPage.astro'

const page = Number(Astro.params.page) || 1
// For ISR caching, ignore search params - paginated pages should be static
const data = await fetchData('en', page, Astro.url.origin)

if (!data) return Astro.rewrite('/en/404')

export const getStaticPaths = () => staticPaths('en')
---

<ActivitiesListing {...data} currentPage={page} />

