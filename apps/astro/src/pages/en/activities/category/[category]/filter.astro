---
export const prerender = false

import ActivitiesListing, { fetchData, staticPathsCategory } from '@/src/templates/activities/ActivitiesPage.astro'

const page = 1
const category = Astro.params.category as string
const data = await fetchData('en', category, page, Astro.url.searchParams)

console.log('Rendering filtered category page:', category, new Date().toISOString())

// Calculate canonical URL (remove /filter from current path)
const canonicalUrl = Astro.url.origin + `/en/activities/category/${category}/`

if (!data) return Astro.rewrite('/en/404')

export const getStaticPaths = () => staticPathsCategory('en')
---

<ActivitiesListing {...data} currentPage={page} currentCategory={category} canonicalUrl={canonicalUrl} doNotIndex={true} />

