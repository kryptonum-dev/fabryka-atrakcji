---
export const prerender = false

import HotelsListing, { fetchData } from '@/src/templates/hotels/HotelsPage.astro'

const data = await fetchData('en', 1, Astro.url.origin, Astro.url.searchParams)

// Calculate canonical URL (remove /filter from current path)
const canonicalUrl = Astro.url.origin + '/en/hotels/'

if (!data) return Astro.rewrite('/en/404')
---

<HotelsListing {...data} currentPage={1} canonicalUrl={canonicalUrl} doNotIndex={true} />

