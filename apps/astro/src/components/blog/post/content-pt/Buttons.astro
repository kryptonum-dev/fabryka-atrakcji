---
import Button, { ButtonDataQuery, type ButtonDataProps } from '@/src/components/ui/Button'

export const Buttons_Query = `
  _type == "Buttons" => {
    ${ButtonDataQuery('buttons[]')}
  },
`

type Props = {
  node: {
    buttons: ButtonDataProps[]
  }
}

const { node } = Astro.props
---

<ul class="Buttons">
  {node.buttons.map((button, index) => <Button shade={index === 0 ? 'dark' : 'light'} {...button} />)}
</ul>

<style lang="scss">
  .Buttons {
    display: flex;
    align-items: center;
    margin: 1.5rem 0;
    flex-wrap: wrap;
    gap: 0.75rem;

    @media (max-width: 439px) {
      flex-direction: column;
      align-items: stretch;

      :global(a) {
        max-width: 100%;
        width: 100%;

        &[data-theme='secondary'] {
          display: flex;
          justify-content: center;
        }

        &[data-theme='primary'] {
          :global(span) {
            margin: 0 auto;
            padding-right: 1.75rem;
          }
        }
      }
    }
  }
</style>
