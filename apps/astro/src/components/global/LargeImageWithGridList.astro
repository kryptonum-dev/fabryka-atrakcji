<style lang="scss">
  .LargeImageWithGridList {
    max-width: 85.375rem;
    margin: 0 auto;
    display: grid;
    grid-template-columns: auto 1fr;
    gap: 1rem;
    position: relative;
    align-content: start;
    min-height: 48rem;

    .container {
      min-height: 48rem;
      width: 100%;
      position: absolute;
      overflow: hidden;
      z-index: -1;
      aspect-ratio: 1366/768;

      &::before,
      &::after {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        opacity: 0.8;
        background: linear-gradient(261deg, #020b17 15.83%, rgba(2, 11, 23, 0) 56.85%);
      }

      &::after {
        background: linear-gradient(180deg, #020b17 0%, rgba(2, 11, 23, 0) 100%);
        max-height: 23rem;
      }

      img {
        width: 100%;
        height: 100%;
        object-fit: cover;
      }

      .icon {
        bottom: 0;
        left: 50%;
        transform: translateX(-50%);
        position: absolute;
        padding: 0.625rem;
        background: var(--neutral-200, #f5f1ec);
      }
    }

    .header {
      padding: 4rem;
      padding-right: 0;
      max-width: clamp(20rem, calc(23.5vw / 0.48), 42.4375rem);

      .heading {
        color: var(--neutral-400, #ffe4ca);
        font-size: var(--typography-heading-l, 2rem);
        letter-spacing: -0.065em;
      }
    }

    .list {
      padding: 4rem;
      display: grid;
      grid-template-columns: repeat(2, 1fr);
      align-items: start;
      gap: 2.75rem 1rem;
      padding-left: clamp(1rem, calc(2.3vw / 0.48), 4rem);
      .item {
        display: grid;
        gap: clamp(0.625rem, calc(0.75vw / 0.48), 0.75rem);
        font-variant-numeric: lining-nums proportional-nums;

        svg {
        }

        .list-heading {
          color: var(--neutral-400, #ffe4ca);
          font-weight: 700;
          line-height: 1.55;
          font-size: var(--typography-body-l, 1rem);
          font-family: 'Neue Haas Unica', 'Neue Haas Unica Fallback', sans-serif;
          letter-spacing: -0.03em;
        }

        .paragraph {
          color: var(--primary-200, #e6cbd5);
          word-break: break-word;
          overflow-wrap: break-word;
          hyphens: auto;
        }
      }
    }

    @media (max-width: 67.4375rem) {
      grid-template-columns: 1fr;

      .container {
        min-height: auto;
      }

      .header {
        padding: 4rem var(--pageMargin) 0;
        margin: 0 auto 40vw;
        text-align: center;
        max-width: calc(38rem + 2 * var(--pageMargin));
      }

      .list {
        padding: 3rem var(--pageMargin);
        max-width: 46rem;
        margin: 0 auto;

        .item {
          .list-heading {
            color: var(--primary-800, #45051c);
          }

          .paragraph {
            color: var(--primary-400, #74535e);
          }
        }
      }
    }
    @media (max-width: 54.3125rem) {
      .header {
        margin-bottom: 35vw;
      }
    }
    @media (max-width: 47.9375rem) {
      .header {
        margin-bottom: 31vw;
      }
    }
    @media (max-width: 41.1875rem) {
      .header {
        margin-bottom: 31vw;
      }
      .list {
        grid-template-columns: 1fr;
      }
    }

    @media (max-width: 35.5625rem) {
      gap: 1.75rem;
      .header {
        margin: 63vw auto 0;

        padding: 0 var(--pageMargin);

        .heading {
          text-align: start;
          color: var(--primary-800, #45051c);
          font-size: var(--typography-heading-l, 2rem);
          letter-spacing: -0.065em;
        }
      }

      .list {
        position: static;
        padding-top: 0;
      }
    }
  }
</style>
