<style lang="scss">
  .Newsletter {
    max-width: 85.375rem;
    margin: 0 auto;
    padding: clamp(3rem, calc(4vw / 0.48), 4rem) var(--pageMargin);
    display: grid;
    place-items: center;
    position: relative;

    .background {
      position: absolute;
      inset: 0;
      z-index: -1;
      overflow: hidden;

      &::before {
        position: absolute;
        content: '';
        left: 50%;
        top: 50%;
        transform: translate(-50%, -50%) rotate(45deg);
        background-clip: content-box;
        width: 250%;
        height: 250%;
