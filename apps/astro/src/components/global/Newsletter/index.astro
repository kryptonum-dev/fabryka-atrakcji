      }

      img {
        height: 100%;
        width: 100%;
      }

      > svg {
        position: absolute;
        inset: 0;
        width: 100%;
        height: 100%;
      }
    }

    .wrapper {
      background: var(--primary-800, #45051c);
      padding: clamp(1.5rem, calc(3.5vw / 0.48), 4rem);
      border-radius: clamp(1rem, calc(1.5vw / 0.48), 1.5rem);
      display: grid;
      grid-template-columns: 1fr auto;
      column-gap: 2rem;
      grid-template-rows: auto 1fr;
      width: 100%;
      max-width: 69.375rem;
      overflow: hidden;
      .header {
        max-width: 26.4375rem;
        margin: 0.75rem 0 clamp(1.5rem, calc(2.5vw / 0.48), 2.5rem);

        .heading {
          margin-bottom: 1rem;
          font-size: var(--typography-heading-l, 2rem);
          line-height: 0.9;
          letter-spacing: -0.065em;
          color: var(--neutral-400, #ffe4ca);
        }

        .subheading {
          margin-bottom: 1rem;
          line-height: 1;
          letter-spacing: -0.055em;
          color: var(--neutral-400, #ffe4ca);
          font-family: 'PF Grand Gothik', 'PF Grand Gothik Fallback', sans-serif;
          text-transform: uppercase;
          font-weight: 760;
          font-size: var(--typography-heading-s, 1.125rem);
        }

        .paragraph {
          color: var(--primary-200, #e6cbd5);
        }
      }

      :global(.Wrapper) {
        grid-column: 1/2;
        grid-row: 2/3;
        margin-bottom: 0.75rem;
        align-self: end;

        :global(> button):focus-visible {
          outline: 2px solid var(--neutral-200, #ffe4ca);
        }

        :global(.popup-window)::before {
          background: linear-gradient(180deg, rgba(69, 5, 28, 0.6) 0%, rgba(69, 5, 28, 0.9) 100%);
          backdrop-filter: blur(5px);
        }
      }

      > img {
        grid-column: 2/3;
        width: clamp(320px, calc(320vw / 7.68), 438px);
        aspect-ratio: 438/329;
        grid-row: 1/3;
        border-radius: clamp(0.5rem, calc(0.75vw / 0.48), 0.75rem);
      }

      .container {
        border-radius: clamp(1rem, calc(1.5rem / 0.48), 2rem);
        isolation: isolate;
        max-width: 59.75rem;
        padding: 2.5rem 2rem;
        display: grid;
        grid-template-columns: 1fr 24.75rem auto;
        grid-template-rows: repeat(2, 1fr);
        column-gap: 1.5rem;

        .popup-heading,
        .popup-paragraph {
          max-width: 22.75rem;
          grid-column: 1/2;
          justify-self: start;
        }

        .popup-heading {
          grid-row: 1/2;
          font-weight: 700;
          font-family: 'Neue Haas Unica', 'Neue Haas Unica Fallback', sans-serif;
          line-height: 1.25;
          font-size: var(--typography-body-2xl, 1.5rem);
          letter-spacing: -0.04em;
          color: var(--primary-700, #600d2a);
          margin-bottom: clamp(1rem, calc(1vw / 0.48), 1.5rem);
          align-self: end;
        }

        .popup-paragraph {
          font-size: var(--typography-body-xl, 1.125rem);
          grid-row: 2/3;
        }

        .form-wrapper {
          overflow-y: auto;
          grid-column: 2/3;
          max-height: 100%;
          grid-row: 1/3;
          background-color: var(--neutral-100, #faf7f7);
          border-radius: clamp(0.5rem, calc(0.75vw / 0.48), 0.75rem);
          padding: clamp(1rem, calc(2vw / 0.48), 2rem) clamp(1rem, calc(2vw / 0.48), 2rem)
            clamp(1.25rem, calc(2vw / 0.48), 2rem);
          position: relative;
          display: flex;
          flex-direction: column;

          :global(form) {
            :global(label) {
              &:nth-of-type(1) {
                margin-bottom: 1.5rem;
              }

              &:nth-of-type(2) {
                margin-bottom: 1rem;
              }
            }

            :global(button[type='submit']) {
              width: 100%;
              max-width: 100%;

              :global(span) {
                margin: 0 auto;
                padding-right: 1.75rem;
              }
            }

            :global([data-form-state]) {
              position: static;
              padding: 0;
              background-color: var(--neutral-100, #faf7f7);
              align-items: flex-start;
              text-align: start;
              isolation: isolate;
              min-height: 19.8125rem;

              :global(> *:first-child) {
                align-self: flex-start;
              }
            }

            &[data-finished='true'] {
              :global(button[type='submit']),
              :global([role='status']),
              :global(label) {
                display: none;
              }
            }
          }
        }
        :global(.CloseButton) {
          align-self: start;
          grid-column: 3/4;
          grid-row: 1/3;
        }
      }
    }

    @media (max-width: 60.5625rem) {
      .background > svg {
        height: 50%;
        bottom: 0;
        left: 0;
        right: unset;
        top: unset;
      }
      .wrapper {
        grid-template-columns: 1fr;
        grid-template-rows: repeat(3, auto);
        max-width: 38rem;

        .header {
          grid-column: 1/2;
          grid-row: 1/2;
          max-width: 100%;
        }

        :global(.Wrapper) {
          grid-column: 1/2;
          grid-row: 2/3;
          margin-bottom: clamp(2.5rem, calc(3.5vw / 0.48), 3.5rem);
        }

        > img {
          grid-column: 1/2;
          grid-row: 3/4;
          width: 100%;
        }
      }
    }

    @media (max-width: 56.1875rem) {
      .wrapper .container {
        max-width: 38rem;
        grid-template-columns: 1fr auto;
        grid-template-rows: auto auto 1fr;
        padding: clamp(1.5rem, calc(3.5vw / 0.48), 3.5rem) clamp(1rem, calc(3.5vw / 0.48), 3.5rem);
        column-gap: 2rem;

        .popup-heading {
          grid-column: 1/2;
          grid-row: 1/2;
          max-width: 100%;
        }

        .popup-paragraph {
          grid-column: 1/2;
          grid-row: 2/3;
          max-width: 100%;
        }

        .form-wrapper {
          grid-column: 1/3;
          grid-row: 3/4;
          margin-top: clamp(3rem, calc(4vw / 0.48), 4rem);
        }

        :global(.CloseButton) {
          grid-column: 2/3;
          grid-row: 1/3;
        }
      }
    }

    @media (max-width: 31.1875rem) {
      .wrapper {
        padding: 1.5rem 1.5rem 0;

        :global(.Wrapper) {
          :global(> button) {
            width: 100%;
            max-width: 100%;

            :global(span) {
              margin: 0 auto;
              padding-right: 1.75rem;
            }
          }
        }

        > img {
          width: calc(100% + 3rem);
          max-width: calc(100% + 3rem);
          margin: 0 -1.5rem;
          border-radius: 0.5rem 0.5rem 0 0;
        }

        .container {
          border-radius: 1rem 1rem 0 0;
          padding: 1.5rem 1rem;
          padding-bottom: 0rem;

          &::before,
          &::after {
            border-radius: 1rem 1rem 0 0;
          }

          .form-wrapper {
            width: calc(100% + 2rem);
            margin: 3rem -1rem 0;
            border-radius: 0.5rem 0.5rem 0 0;
          }
        }
      }
    }
  }
</style>
