<style lang="scss">
  .HotelCard {
    $card-breakpoint: 69.3125rem;
    border-radius: 0.75rem;
    overflow: hidden;
    padding: 1px;
    isolation: isolate;
    position: relative;

    &::before,
    &::after {
      inset: 0px;
      position: absolute;
      content: '';
      opacity: 0;
      transition: opacity 150ms;
    }

    &::before {
      z-index: -3;
      background-color: var(--primary-800);
    }

    &::after {
      z-index: -2;
      background: conic-gradient(
        from 135deg at 50% 50%,
        #798ddc 0deg,
        #e7c78f 90deg,
        #fa7468 266.40000343322754deg,
        #798ddc 360deg
      );
      transition: opacity 150ms;
    }

    .wrapper {
      display: grid;
      grid-template-columns: auto 1fr;
      isolation: isolate;
      overflow: hidden;
      gap: 0.75rem 2rem;
      padding: 0.375rem 1.25rem 0.375rem 0.375rem;
      border-radius: 0.75rem;
      position: relative;
      height: 100%;
      align-items: center;


      &::after {
        position: absolute;
        content: '';
        background-color: var(--neutral-100);
        inset: 1px;
        border-radius: 0.62rem;
        z-index: -2;
      }

      &::before {
        position: absolute;
        content: '';
        transform: translate(-2.4rem, -0.7rem) rotate(-2deg);
        background-color: var(--neutral-300);
        opacity: 0;
        inset: 1px;
        transition:
          opacity 150ms,
          transform 250ms var(--easing);
        border-radius: 0.62rem;
        z-index: -1;
      }

      .background {
        position: absolute;
        inset: 0;
        z-index: 0;
      }

      .img-box {
        grid-column: 1/2;
        position: relative;
        height: 100%;
        grid-row: 1/2;
        z-index: -1;      
        cursor: pointer;


        img {
          width: clamp(200px, calc(200vw / 7.68), 325px);
          aspect-ratio: 20.3125/13.5626;
          height: 100%;
        }
        .stars-mobile {
          position: absolute;
          align-items: center;
          gap: 0.1875rem;
          left: 1rem;
          bottom: 1rem;
          padding: 0.25rem;
          border-radius: 999rem;
          background-color: var(--neutral-100, #faf7f7);
          display: none;
        }
      }

      .content {
        grid-column: 2/3;
        grid-row: 1/2;
        display: flex;
        flex-direction: column;
        align-items: flex-start;
        justify-content: center;
        padding: 1rem 0;

        .upper-row {
          display: flex;
          align-items: center;
          gap: 0.75rem;
          margin-bottom: 1.25rem;
          flex-wrap: wrap;

          .title {
            color: var(--primary-800, #45051c);
            font-size: var(--typography-body-2xl, 1.5rem);
            font-weight: 700;
            line-height: 1.25;
            letter-spacing: -0.04em;
          }

          .stars {
            display: flex;
            align-items: center;
            gap: 0.1875rem;
          }
        }

        .details {
          display: grid;
          gap: 0.25rem 1rem;
          grid-template-columns: repeat(2, auto);
          grid-template-rows: auto 1fr;
          margin-bottom: 1.25rem;

          span {
            display: flex;
            align-items: flex-start;
            gap: 0.5rem;

            svg {
              margin-top: 4px;
            }

            &:first-child {
              grid-column: 1/3;
              grid-row: 1/2;
            }
            &:nth-child(2) {
              grid-column: 1/2;
              grid-row: 2/3;
            }

            &:nth-child(3) {
              grid-column: 2/3;
              grid-row: 2/3;
            }
          }
        }

        :global(a) {
          z-index: 5;
        }
      }
    }

    &:has(.wrapper .background:hover),
    &:has(.wrapper .content > a:hover) {
      & .wrapper::before {
        opacity: 1;
        transform: translate(0) rotate(0deg);
      }
    }

    &:has(.wrapper .background:focus:not(:focus-visible)),
    &:has(.wrapper .content > a:focus:not(:focus-visible)) {
      &::after {
        opacity: 1;
      }
    }

    &:has(.wrapper .background:focus-visible),
    &:has(.wrapper .content > a:focus-visible) {
      &::before {
        opacity: 1;
      }
    }

    @media (max-width: $card-breakpoint) {
      .wrapper {
        grid-template-columns: 1fr;
        grid-template-rows: auto 1fr;
        padding: 0;
        gap: 0;
        align-items: start;
        &::before {
          display: none;
        }

        .img-box {
          position: relative;
          grid-column: 1/2;
          grid-row: 1/2;
          margin: 1px 1px 0;
          overflow: hidden;
          border-radius: 0.62rem 0.62rem 0 0;
          img {
            width: 100%;
            height: auto;
            transition: transform 400ms var(--easing);
          }
          .stars-mobile {
            display: flex;
          }
        }

        .content {
          padding: 1rem;
          grid-column: 1/2;
          grid-row: 2/3;
          height: 100%;

          .upper-row {
            margin-bottom: 1rem;
            .stars {
              opacity: 0;
              position: absolute;
            }
          }
          .details {
            display: flex;
            flex-direction: column;
            gap: 0.25rem;
            margin-bottom: 1rem;
          }

          :global(a) {
            max-width: 100%;
            margin-top: auto;
            width: 100%;

            :global(span) {
              margin: 0 auto;
              padding-right: 1.75rem;
            }
          }
        }
      }
      &:has(.wrapper .background:hover),
      &:has(.wrapper .content > a:hover) {
        & .wrapper::before {
          opacity: 1;
          transform: scaleY(1);
          transition: transform 400ms var(--easing);
        }
        .img-box img {
          transform: scale(1.15) rotate(3deg);
        }
      }
    }
  }
