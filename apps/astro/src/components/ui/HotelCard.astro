---
import { getLangFromPath, type Language } from '@/src/global/languages'
import Image, { ImageDataQuery, type ImageDataProps } from './image'
import Button from './Button'

export const HotelCardQuery = `
    _id,
    name,
    "slug": slug.current,
    stars,
    ${ImageDataQuery('imageList[]')}
    location->{
        name,
        "slug": slug.current,
    },
    "maxPeopleOvernight": maxPeople.overnight,
    address,
    "maxPeopleOvernight": maxPeople.overnight,
    popularityIndex,
    pricing,
`

export type HotelCardProps = {
  _id: string
  name: string
  slug: string
  stars: number
  imageList: ImageDataProps[]
  location: {
    name: string
    slug: string
  }
  maxPeopleOvernight: number
  address: {
    city: string
    street: string
    postalCode: string
    voivodeship: string
  }
  popularityIndex: number
  pricing: {
    hasFixedGroupPrice: boolean
    groupPrice: number
    pricePerPerson: number
  }
  imgConfig: {
    sizes: string
    loading: 'lazy' | 'eager'
    fetchpriority: 'auto' | 'high'
  }
}

const translations = {
  pl: {
    pricing: {
      from: 'od',
      price: 'zł/noc za osobę',
    },
    maxPeople: {
      max: 'Maks.',
      people: 'Osób',
    },
    button: 'Sprawdź hotel',
  },
  en: {
    pricing: {
      from: 'from',
      price: 'PLN/night per person',
    },
    maxPeople: {
      max: 'Max.',
      people: 'people',
    },
    button: 'Check hotel',
  },
}

const t = translations[(getLangFromPath(Astro.url.pathname) as Language) || 'pl']

const { name, slug, imageList, stars, address, pricing, maxPeopleOvernight, imgConfig } = Astro.props as HotelCardProps

const getVoivodeship = (voivodeship: string) => {
  switch (voivodeship) {
    case 'dolnoslaskie':
      return 'Dolnośląskie'
    case 'kujawskoPomorskie':
      return 'Kujawsko-pomorskie'
    case 'lubelskie':
      return 'Lubelskie'
    case 'lubuskie':
      return 'Lubuskie'
    case 'lodzkie':
      return 'Łódzkie'
    case 'malopolskie':
      return 'Małopolskie'
    case 'mazowieckie':
      return 'Mazowieckie'
    case 'opolskie':
      return 'Opolskie'
    case 'podkarpackie':
      return 'Podkarpackie'
    case 'podlaskie':
      return 'Podlaskie'
    case 'pomorskie':
      return 'Pomorskie'
    case 'slaskie':
      return 'Śląskie'
    case 'swietokrzyskie':
      return 'Świętokrzyskie'
    case 'warminskoMasurskie':
      return 'Warmińsko-mazurskie'
    case 'wielkopolskie':
      return 'Wielkopolskie'
    case 'zachodniopomorskie':
      return 'Zachodniopomorskie'
    default:
      return voivodeship
  }
}
